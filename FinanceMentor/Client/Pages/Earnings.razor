@page "/earnings"
@using System.Globalization;
@using FinanceMentor.Shared;
@*helps to communicate with ASP.Net back end*@
@inject HttpClient Http;
@using FinanceMentor.Client.Components;



<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                Earnings
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Subject</th>
                            <th>Amount</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (earnings == null)
                        {
                            <tr><td><em>Loading...</em></td></tr>
                        }
                        else
                        {
                            @foreach (var earning in earnings)
                            {
                    <tr>
                        <td>@earning.Date.ToShortDateString()</td>
                        <td>@earning.Category</td>
                        <td>@earning.Subject</td>
                        <td>@earning.Amount.ToString("C2", CultureInfo.CreateSpecificCulture("en-US"))</td>
                        <td><button type="button" class="btn btn-danger btn-sm" @onclick="() => OpenDeleteDialog(earning)">Delete</button></td>
                    </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-4">

        @*Calling Refresh method to display user inout on click *@
        <EarningForm OnSubmitCallback="@Refresh"></EarningForm>
    </div>
</div>
<div>&nbsp;</div>



@if (DeleteDialogOpen)
{
<ModalDialog Title="Are you sure?"
             Text="Do you want to delete this entry?"
             OnClose="@OnDeleteDialogClose"
             DialogType="ModalDialog.ModalDialogType.DeleteCancel">
</ModalDialog>
}


@code {
    private Earning[] earnings;
    /// <summary>
    /// helps to delete row from the table 
    /// </summary>
    private Earning _earningToDelete;
    public bool DeleteDialogOpen { get; set; }

    /// <summary>
    /// contains the information on whether the user has confirmed or canceled the dialog
    /// </summary>
    /// <param name="accepted"></param>
    /// <returns></returns>
    
    private async Task OnDeleteDialogClose(bool accepted)
        {
            if (accepted)
            {
                await Http.DeleteAsync($"api/Earnings/{_earningToDelete.Id}");
                await LoadData();
                _earningToDelete = null;
            }
            DeleteDialogOpen = false;
        
        StateHasChanged();
    }


    public void OpenDeleteDialog(Earning earning)
    {

        DeleteDialogOpen = true;
        _earningToDelete = earning;
        StateHasChanged();
    }


    protected async override Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        earnings = await Http.GetFromJsonAsync<Earning[]>("api/Earnings");
        StateHasChanged();
    }



    /// <summary>
    /// Auto Refresh the page and display user input
    /// </summary>
    public async void Refresh()
    {

        await LoadData();
    }
}